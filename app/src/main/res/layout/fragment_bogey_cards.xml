<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="340dp"
    android:layout_marginLeft="10dp"
    android:layout_height="wrap_content"
    android:background="@drawable/image_rectangle"
    android:layout_marginBottom="15dp"
    android:elevation="2dp">

    <ImageButton
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:id="@+id/remove"
        android:background="@drawable/delete"/>
    <TextView
        android:id="@+id/seat_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="16dp"
        android:textSize="24dp"
        android:textColor="#000"/>

    <EditText
        android:id="@+id/in_seat_no"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:layout_toRightOf="@id/seat_no"
        android:layout_toLeftOf="@id/remove"
        android:backgroundTint="@android:color/transparent"/>

    <TextView
        android:id="@+id/comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="19dp"
        android:textSize="24dp"
        android:layout_below="@+id/seat_no"
        android:textColor="#000"/>

    <EditText
        android:id="@+id/in_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_toRightOf="@id/comment"
        android:layout_below="@+id/in_seat_no"
        android:backgroundTint="@android:color/transparent"/>

    <TextView
        android:id="@+id/type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="16dp"
        android:textSize="24dp"
        android:layout_below="@+id/comment"
        android:textColor="#000" />

    <Spinner
        android:id="@+id/in_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:layout_toRightOf="@id/seat_no"
        android:layout_below="@+id/in_comment" />
    <ImageButton
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginRight="30dp"
        android:layout_below="@id/in_type"
        android:layout_alignParentRight="true"
        android:id="@+id/camera"
        android:background="@drawable/camera_attach"
        />
    <ImageButton
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_toLeftOf="@id/camera"
        android:layout_below="@id/in_type"
        android:layout_marginRight="10dp"
        android:id="@+id/mic"
        android:background="@drawable/attachment"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/mic"
        android:layout_below="@id/type"
        android:id="@+id/imagename"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="15dp"/>


</RelativeLayout>